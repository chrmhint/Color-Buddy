<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wardrobe.NewClothesActivity">

    <EditText
        android:id="@+id/clothesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Clothing Type"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/clothesDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Clothing Description"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/clothesName"
        app:layout_constraintStart_toStartOf="@+id/clothesName"
        app:layout_constraintTop_toBottomOf="@+id/clothesName" />

    <EditText
        android:id="@+id/clothesPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Clothing Primary Color"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/clothesSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Clothing Secondary Color"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/clothesPrimary"
        app:layout_constraintStart_toStartOf="@+id/clothesPrimary"
        app:layout_constraintTop_toBottomOf="@+id/clothesPrimary" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="@+id/clothesDescription"
        app:layout_constraintStart_toStartOf="@+id/clothesDescription"
        app:layout_constraintTop_toBottomOf="@+id/clothesDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>