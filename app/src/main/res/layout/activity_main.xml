<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <github.hellocsl.cursorwheel.CursorWheelLayout
        android:id="@+id/ColorWheel"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="32dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:wheelBackgroundColor="#ffffff"
        app:wheelCursorColor="#000000"
        app:wheelItemRotateMode="none"
        app:wheelSelectedAngle="270">

    </github.hellocsl.cursorwheel.CursorWheelLayout>

    <Button
        android:id="@+id/itemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:text="Inventory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ColorWheel" />

    <Button
        android:id="@+id/roomsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:text="Groups"
        app:layout_constraintBaseline_toBaselineOf="@+id/itemButton"
        app:layout_constraintStart_toEndOf="@+id/itemButton" />

    <Button
        android:id="@+id/itemCheckButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Item Check"
        app:layout_constraintEnd_toEndOf="@+id/itemButton"
        app:layout_constraintStart_toStartOf="@+id/itemButton"
        app:layout_constraintTop_toBottomOf="@+id/itemButton" />

    <Button
        android:id="@+id/signoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signout"
        app:layout_constraintBaseline_toBaselineOf="@+id/itemCheckButton"
        app:layout_constraintEnd_toEndOf="@+id/roomsButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/itemCheckButton" />

</androidx.constraintlayout.widget.ConstraintLayout>